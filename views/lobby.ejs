<% include partials/header%>

<script src="/socket.io/socket.io.js"></script>

<link rel="stylesheet" type="text/css" href="/stylesheets/lobby.css">



<div class="container lobby-container">
	<div class="row">
		<div class="col-xs-6" id="col1">
			<p>All chat!</p>
			<div class="chat-window">
				<ol class="chat-list all-chat-list">
					<li><div class="other-chat">
						Hey how are you? :D
					</div></li>

					<li><div class="self-chat">
						I'm good :)
					</div></li>
				</ol>
			</div>
			<input type="text" class="chat-message-input all-chat-message-input">
		</div>

		<div class="col-xs-6">
			Hi there, <%=currentUser.username%>!

			<br>
			<h3>Games:</h3>

			<a id="testLink" class="btn btn-default" href="#">NEW ROOM</a>

			<ul id="current-games-list">
				<li>Game room 1</li>
			</ul>
			
			<br>
			<h3>Online players:</h3>
			<ul id="current-players-list">
				
			</ul>
		</div>
	</div>
</div>



<div class="game-container inactive-window container">
	<button id="backButton" class="btn btn-warning">Back</button>
	
	<div class="room-container">
		<div id="mainRoomBox" class="">
			<p></p>
		</div>	
	</div>
	
	
	<div class="game-buttons-div">
		<button class="btn btn-danger">Nothing</button>
		<button class="btn btn-success" id="start-button">Start!</button>
	</div>

	<div class="center-div well">
			Need at least 5 players to start :P
	</div>



	<ul class="nav nav-tabs">
		<li class="active"><a data-toggle="tab" href="#all-chat-in-game">All Chat!</a></li>
		<li><a data-toggle="tab" href="#room-chat-in-game">Game Chat!</a></li>
		<li><a data-toggle="tab" href="#menu2">Menu 2</a></li>
	</ul>

	<div class="tab-content" style='height: 35%;'>

		<div id="all-chat-in-game" class="tab-pane fade in active full-height">
			<div class="chat-window">
				<ol class="chat-list all-chat-list">
					<li><div class="other-chat">
						Hey how are you? :D
					</div></li>

					<li><div class="self-chat">
						I'm good :)
					</div></li>
				</ol>
			</div>

			<input type="text" class="chat-message-input all-chat-message-input">
		</div>
		

		<div id="room-chat-in-game" class="tab-pane fade full-height">
			<div id="room-chat-in-game" class="tab-pane fade in active full-height">
				<div class="chat-window">
					<ol class="chat-list room-chat-list">
						<li><div class="other-chat">
							Hey how are you? :D GMAE CHATTTTTT
						</div></li>

						<li><div class="self-chat">
							I'm good :)
						</div></li>
					</ol>
				</div>

				<input type="text" class="room-chat-message-input chat-message-input">
			</div>

		</div>

		<div id="menu2" class="tab-pane fade">
			<h3>Menu 2</h3>
			<p>Some content in menu 2.</p>
		</div>
	</div>


</div>

<script type="text/javascript" src="scripts/lobby.js"></script>

<% include partials/footer%>