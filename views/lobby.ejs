<% include partials/header%>

<script src="/socket.io/socket.io.js"></script>

<link rel="stylesheet" type="text/css" href="/stylesheets/lobby.css">



<div class="container lobby-container">
	<div class="row">
		<div class="col-xs-6" id="col1">
			<p>All chat!</p>
			<div id="chat-window">
				<ol id="chat-list">
					<li><div class="other-chat">
						Hey how are you? :D
					</div></li>

					<li><div class="self-chat">
						I'm good :)
					</div></li>
				</ol>
			</div>
			<input type="text" name="chat-message" id="chat-message-input">
		</div>

		<div class="col-xs-6">
			Hi there, <%=currentUser.username%>!

			<br>
			<h3>Games:</h3>

			<a id="testLink" class="btn btn-default" href="#">PRESS ME FOR NEW ROOM</a>

			<ul id="current-games-list">
				<li>Game room 1</li>
			</ul>
			
			<br>
			<h3>Online players:</h3>
			<ul id="current-players-list">
				
			</ul>
		</div>
	</div>
</div>



<div class="room-container inactive-window container">
	<button id="backButton" style="display: none;">HIT ME! >:)</button>
	
	<div id="mainRoomBox" class="">
		

		<p></p>
		<p></p>
		<p></p>

		<p>
			<img src="base-res.png">

		</p>
	</div>


</div>

<script type="text/javascript" src="scripts/lobby.js"></script>

<% include partials/footer%>