<% include ../partials/header%>
<style>
    .active {
        /*border: 2px solid black !important*/
    }

</style>

    <div class="container">
            <h1 style="text-align: center;">Create a new Thread</h1>

            <div style="width: 70%; margin: 25px auto;">

                <form action="/forum" method="POST">
                    <div style="text-align: center;">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-success">
                                <input type="radio" autocomplete="off" name="avalon">Avalon
                            </label>
                            <label class="btn btn-info">
                                <input type="radio" autocomplete="off" name="offTopic">Off-topic
                            </label>
                            <label class="btn btn-warning">
                                <input type="radio" autocomplete="off" name="suggestion">Suggestions
                            </label>
                            <label class="btn btn-danger">
                                <input type="radio" autocomplete="off" name="bug">Bugs
                            </label>
                        </div>
                    </div>
                
                    <br>


                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Title" name="title" maxlength="100">
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" type="text" placeholder="Text" name="text" rows="10"></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>

                <a href="/forum">Back</a>
            </div>


    </div>


    <% include ../partials/footer%>